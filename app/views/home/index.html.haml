            = link_to(image_tag([logos_folder, 'lirmm_logo.png'].join('/')), "http://www.lirmm.fr", target: '_blank')
            = link_to(image_tag([logos_folder, 'cnrs_logo.jpg'].join('/')), "http://www.cnrs.fr/en", target: '_blank')
            = link_to(image_tag([logos_folder, 'inrae_logo.jpg'].join('/')), "https://www.inrae.fr/en", target: '_blank')
            = link_to(image_tag([logos_folder, 'um_logo.png'].join('/')), "https://www.umontpellier.fr/en", target: '_blank')
            = link_to(image_tag([logos_folder, 'stanford-university_logo.png'].join('/')), "https://www.stanford.edu", target: '_blank')
