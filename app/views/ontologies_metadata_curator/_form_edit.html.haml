      .modal-content
        .modal-header
          %h5.modal-title Modal title
          %button.close{"aria-label" => "Close", "data-bs-dismiss" => "modal", type: "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          = form_tag("/ontologies_metadata_curator/:ontologies_metadata_curator_id/update" ,method: "put") do 
            = render partial: 'form'
            %button{"data-bs-dismiss" => "modal", type: "button", :class=> "btn btn-primary"} Close
            %button{:type => "submit", :class=> "btn btn-primary"} Save changes

  
