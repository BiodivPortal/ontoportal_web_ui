function resetAutocompleter(ontologyId) {
  var input = jQuery("#map_to");
  input[0].autocompleter.flushCache();
  input[0].autocompleter.getExtraParams()["id"] = ontologyId;
  input.val("");
}

function resetMappingUIWithFacebox() {
